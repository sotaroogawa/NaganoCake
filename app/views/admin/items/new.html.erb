<<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-10 col-lg-8 px-5 px-sm-0 mx-auto">
      <h3>新規商品登録</h3>
      <%= form_with model:[current_admin,@item], local: true do |f| %>
        <div class="field">
          <%= f.label "商品画像", class:"col-3" %>
          <%= f.attachment_field :image %>
        </div>
        <div class="form-group">
          <%= f.label "商品名", class:"col-3" %>
          <%= f.text_field :name, class:"col-6" %>
        </div>
        <div class="form-group">
          <%= f.label "商品説明", class:"col-3" %>
          <%= f.text_area :introduction, class:"col-6" %>
        </div>
        <div class="form-group">
          <%= f.label "ジャンル", class:"col-3" %>
          <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択してください--", class:"col-6" %>
        </div>
        <div class="form-group">
          <%= f.label "税抜価格", class:"col-3" %>
          <%= f.text_field :price, class:"col-6" %>円
        </div>
        <div class="form-group">
          <%= f.label "販売ステータス", class:"col-3" %>
          <%= f.radio_button :is_active, true, checked: true %>販売中
          <%= f.radio_button :is_active, false %>販売停止中
        </div>
        <div class="form-group text-center">
          <%= f.submit "新規登録", class:"btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>