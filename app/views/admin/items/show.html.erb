<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-10 col-lg-10 px-5 px-sm-0 mx-auto">
      <h2>商品詳細</h2>
      <%= link_to "", edit_admin_item_path, class:"fas fa-plus-circle text-secondary float-right h5" %>
      <%= attachment_image_tag @item, :image, size: "200x200" %>
     <table class="table mx-auto">
        <thead class="thead-light">
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= @item.id %></td>
            <td><%= link_to edit_admin_item_path(@item) do %><%= @item.name %><% end %></td>
            <td><%= @item.price %></td>
            <td><%= @item.genre.name %></td>
            <% if @item.is_active %>
              <td class="text-success">販売中</td>
            <% else %>
              <td class="text-muted">販売停止中</td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>