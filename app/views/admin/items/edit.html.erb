<div class="text-left">
  <h2>ジャンル編集</h2>

  <%= form_with(model:@item, url:admin_item_path ,method: :PATCH) do |f| %>
    <div class="field"><br>
      <%= f.label :価格 %>
      <%= f.text_field :price, autofocus: true %>
      <%= f.submit "変更を保存", class: "btn btn-success" %>
    </div>
  <% end %>
</div>
