<div class="text-left">
  <h2>ジャンル編集</h2>

  <%= form_with(model:@item, url:admin_item_path ,method: :PATCH) do |f| %>
    <div class="form-group">
      <%= f.label :価格 %>
      <%= f.text_field :price, autofocus: true %>
      <%= f.submit "変更を保存", class: "btn btn-success" %>
    </div>
    <div class="form-group">
          <%= f.label "販売ステータス", class:"col-3" %>
          <%= f.radio_button :is_active, true, checked: true %>販売中
          <%= f.radio_button :is_active, false %>販売停止中
        </div>
  <% end %>
</div>
