<div class="text-left">
  <h2>ジャンル編集</h2>

  <%= form_with(model:@genre, url:admin_genre_path ,method: :PATCH) do |f| %>
    <div class="field"><br>
      <%= f.label :ジャンル名 %>
      <%= f.text_field :name, autofocus: true %>
      <%= f.submit "変更を保存", class: "btn btn-success" %>
    </div>

  <% end %>
</div>
