  <h3>配送先登録</h3>
   <%= form_with(model:@address, url:addresses_path ,method: :POST) do |f| %>
    <div class="field">
      <%= f.label :郵便番号 %><br>
      <%= f.text_field :postal_code, autofocus: true %>
    </div>
    <div class="field">
      <%= f.label :住所 %><br>
      <%= f.text_field :address, autofocus: true %>
    </div>
    <div class="field">
      <%= f.label :宛名 %><br>
      <%= f.text_field :name, autofocus: true %>
      <%= f.submit "新規登録" %>
    </div>
   <% end %>


  <h3>配送先一覧</h3>
  <table>
    <thead>
      <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
      </tr>
    </thead>
    <tbody>
      <% @addresses.each do |address| %>
        <tr>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td><%= link_to "削除する", address_path(address), method: :delete %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
