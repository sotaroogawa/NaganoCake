<div class="container">
  <div class="row py-3">
    <div class="colpx-5 px-sm-0 offset-md-1">
      <h3>配送先編集</h3>
    </div>
  </div>
  <div class="row py-3">
    <div class="col px-5 px-sm-0">
      <%= form_with model:@address, local:true do |f| %>
        <div class="field">
          <%= f.label "郵便番号(ハイフンなし)", class:"col-3 px-3" %>
          <%= f.text_field :postal_code, class:"col-3" %>
        </div>
        <div class="field">
          <%= f.label "住所", class:"col-3 px-3" %>
          <%= f.text_field :address, class:"col-7" %>
        </div>
        <div class="field">
          <%= f.label "宛名", class:"col-3 px-3" %>
          <%= f.text_field :name, class:"col-3" %>
          <%= f.submit "変更内容を保存", class:"btn btn-success offset-md-4" %>
        </div>
      <% end %>
    </div>
  </div>
</div>