 <div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-10 col-lg-10 px-5 px-sm-0 mx-auto">
      <h3>
        ショッピングカート
        <%= link_to "カートを空にする",  destroy_all_path, method: :delete, class:"btn btn-danger float-right", "data-confirm" => "削除しますか？" %>
      </h3>
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% sum = 0 %>
          <% @cart_items.each do |cart_item| %>
            <tr>
              <td>
                <%= attachment_image_tag cart_item.item, :image, size: "80x60" %>
                <%= cart_item.item.name %>
              </td>
              <td><%= cart_item.item.add_tax_price.to_s(:delimited) %></td>
              <td>
                <%= form_with model:cart_item, url:cart_item_path(cart_item), method: :PUT do |f| %>
                  <%= f.select :amount, *[1..10] %>
                  <%= f.submit "変更", class:"btn btn-success" %>
                <% end %>
              </td>
              <td><%= (cart_item.item.add_tax_price * cart_item.amount).to_s(:delimited) %></td>
              <td><%= link_to "削除する", cart_item_path(cart_item.id), method: :delete, class:"btn btn-danger", "data-confirm" => "削除しますか？" %> </td>
            </tr>
            <% sum += cart_item.item.add_tax_price * cart_item.amount %>
          <% end %>
        </tbody>
      </table>
      <%= link_to "買い物を続ける", items_path, class:"btn btn-primary" %>
      <table class="table table-bordered col-lg-3 float-right">
        <thead class="thead-light">
          <tr>
            <th>合計金額</th>
            <td><%= sum.to_s(:delimited) %></td>
          </tr>
        </thead>
      </table>
      </br>
      <%= link_to "情報入力に進む", new_order_path, class:"btn btn-success d-block mx-auto col-3 #{'disabled' if sum == 0 }", disabled: true %>
    </div>
  </div>
</div>
