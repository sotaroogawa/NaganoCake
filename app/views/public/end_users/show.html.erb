<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-11 col-lg-8 px-5 px-sm-0">
      <h3 class="bg-light">マイページ</h3>
      <table class="table table-borderless">
        <tr>
          <th>登録情報</th>
          <th><%= link_to "編集する", end_users_edit_path, class:"btn btn-success" %></th>
        </tr>
      </table>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th class="table-active">氏名</th>
            <td><%= @end_user.last_name %> <%= @end_user.first_name%></td>
          </tr>
          <tr>
            <th class="table-active">カナ</th>
            <td><%= @end_user.last_name_kana %> <%= @end_user.first_name_kana %></td>
          </tr>
          <tr>
            <th class="table-active">郵便番号</th>
            <td><%= @end_user.postal_code %></td>
          </tr>
          <tr>
            <th class="table-active">住所</th>
            <td><%= @end_user.address %></td>
          </tr>
          <tr>
            <th class="table-active">電話番号</th>
            <td><%= @end_user.telephone_number %></td>
          </tr>
          <tr>
            <th class="table-active">メールアドレス</th>
            <td><%= @end_user.email %></td>
          </tr>
        </thead>
      </table>
      <table class="table table-borderless">
        <tr>
          <th>配送先</th>
          <th><%= link_to "一覧を見る", addresses_path, class:"btn btn-primary" %></th>
        </tr>
        <tr>
          <th>注文履歴</th>
          <th><%= link_to "一覧を見る", orders_path, class:"btn btn-primary" %></th>
        </tr>
      </table>
    </div>
  </div>
</div>