<div style="text-align:center">
<h2>注文情報入力</h2>
<%= form_with model:@order, url:orders_confirm_path ,method: :post, local: true do |f| %>
  <div class="field">
    <h5>支払い方法</h5>
    <%= f.radio_button :payment_method, "card", checked: true %>
    <%= f.label :クレジットカード %>
    <%= f.radio_button :payment_method, "cash" %>
    <%= f.label :銀行振込 %>
  </div>
  <div class="field">
    <h5>お届け先</h5>
    <%= f.radio_button :address_option, 0 %>
    <%= f.label :ご自身のお届け先 %><br>
    <%= current_end_user.address%><br/><br>

    <%= f.radio_button :address_option, 1  %>
    <%= f.label :登録済み住所から選択 %><br>
    <%= f.select :registered_address, @addresses.all.map { |address| ["#{address.postal_code}" "#{address.address}" "#{address.name}", address[:id]]} %><br><br>

    <%= f.radio_button :address_option, 2 %>
    <%= f.label :新しいお届け先 %><br>
    <%= f.label :郵便番号（ハイフンなし）%><br>
    <%= f.text_field :postal_code %><br>
    <%= f.label :住所 %><br>
    <%= f.text_field :address %><br>
    <%= f.label :氏名 %><br>
    <%= f.text_field :name %><br>
  </div>
<div class="action"><br>
    <%= f.submit "確認画面に進む", class: "btn btn-primary" %>
  </div>
<% end %>

