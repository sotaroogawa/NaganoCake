<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if end_user_signed_in? %>
      <li>
       <%= link_to "ロゴ", root_path %>
      </li>
      <li>
       <%= link_to "マイページ", end_users_my_page_path %>
      </li>
      <li>
       <%= link_to "商品一覧", items_path %>
      </li>
      <li>
       <%= link_to "カート", cart_items_path %>
      </li>
      <li>
        <%= link_to "ログアウト", destroy_end_user_session_path, method: :delete %><br>
      </li>
    <% elsif admin_signed_in? %>
      <li>
       <%= link_to "ロゴ", admin_root_path %>
      </li>
      <li>
       <%= link_to "商品一覧", admin_items_path %>
      </li>
      <li>
       <%= link_to "会員一覧", admin_end_users_path %>
      </li>
      <li>
       <%= link_to "注文履歴一覧", admin_orders_path %>
      </li>
      <li>
       <%= link_to "ジャンル一覧", admin_genres_path %>
      </li>
      <li>
        <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %><br>
      </li>
      <div class="input-group">
        <%= form_with url:admin_items_path, method: :get, local: true do |f| %>
          <%= f.text_field :search, class: "form-control", placeholder: "商品検索" %>
            <span class="input-group-btn">
              <button type="button" class="btn btn-default">
                <%= f.submit "Search" %>
              </button>
            </span>
        <% end %>
      </div><br>
    <% else %>
      <li>
        <%= link_to "ロゴ", root_path %>
      </li>
      <li>
        商品一覧
      </li>
      <li>
        <%= link_to "新規登録", new_end_user_registration_path %>
      </li>
      <li>
        <%= link_to "ログイン", new_end_user_session_path %>
      </li>
    <% end %>
    <%= yield %>
  </body>
</html>
